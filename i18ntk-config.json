{
  "steps": [
    {
      "name": "initialize",
      "script": "i18ntk-init.js",
      "description": "Initialize i18n project structure and validate configuration"
    },
    {
      "name": "analyze",
      "script": "i18ntk-analyze.js",
      "description": "Analyze translation files for completeness and consistency"
    },
    {
      "name": "validate",
      "script": "i18ntk-validate.js",
      "description": "Validate translations against schema and rules"
    },
    {
      "name": "usage",
      "script": "i18ntk-usage.js",
      "description": "Generate usage statistics and reports"
    },
    {
      "name": "summary",
      "script": "i18ntk-summary.js",
      "description": "Generate comprehensive summary report"
    }
  ],
  "settings": {
    "defaultLanguage": "en",
    "supportedLanguages": ["en", "de", "es", "fr", "ja", "pt", "ru", "zh"],
    "outputDirectory": "./i18ntk-reports",
    "backupEnabled": true,
    "verbose": false
  }
}